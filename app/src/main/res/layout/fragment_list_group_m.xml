<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ly_oner_not"
        android:visibility="gone"
        android:layout_width="68dp"
        android:layout_height="88dp"
        android:background="@drawable/background_radius_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="26dp"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_invite"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:textColor="@color/main_C"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:text="초대" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/btn_exit"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:textColor="@color/gray_1"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:text="나가기" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_oner_yes"
        android:visibility="gone"
        android:layout_width="68dp"
        android:layout_height="130dp"
        android:background="@drawable/background_radius_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="26dp"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_oner_remove"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:textColor="@color/main_C"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:text="삭제" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/btn_oner_invite"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:textColor="@color/gray_1"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:text="초대" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/btn_oner_exit"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="43.5dp"
            android:textColor="@color/gray_1"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:text="나가기" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_group"
        android:background="@color/sub_m"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:src="@drawable/arrow_left_1"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="그룹 리스트&amp;루트"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/btn_save"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_regular"
                android:text="저장"/>
            <TextView
                android:id="@+id/btn_remove_invite_exit"
                android:gravity="center"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="..." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:gravity="center_vertical"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:text="" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_people"
                android:layout_width="60dp"
                android:layout_height="32dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_profile_image3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/iv_profile_image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#CCFFFFFF"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_profile_image2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:id="@+id/iv_profile_image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#66FFFFFF"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:id="@+id/iv_profile_image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                android:layout_marginLeft="41dp"
                android:layout_marginRight="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gradient_background_orange"
                android:backgroundTint="@color/white"
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#5B2424"
                android:fontFamily="@font/pretendard_semibold"
                android:text="" />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="41dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="58dp"
                android:layout_height="18dp"
                android:background="@drawable/gradient_background_orange"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/loud_speaker_img"
                    app:tint="@color/sub_m" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_m"
                    android:textSize="8sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="공지사항" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="190dp"
        android:orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>