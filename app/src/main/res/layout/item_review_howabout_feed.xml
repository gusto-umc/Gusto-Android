<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:background="@drawable/background_radius_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/pretendard_extrabold"
            android:text="맛슐랭"
            android:textColor="@color/main_C"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_grade1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/rice_img"
                app:tint="@color/main_C" />

            <ImageView
                android:id="@+id/iv_grade2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/rice_img"
                app:tint="@color/main_C" />

            <ImageView
                android:id="@+id/iv_grade3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/rice_img"
                app:tint="@color/main_C" />

            <ImageView
                android:id="@+id/iv_grade4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/rice_img"
                app:tint="#B7B7B7" />

            <ImageView
                android:id="@+id/iv_grade5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/rice_img"
                app:tint="#B7B7B7" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>