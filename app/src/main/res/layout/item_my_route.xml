<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/item_list_group"
        android:layout_marginHorizontal="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/gradient_background_orange">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/route_img"
            app:tint="@color/black" />

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:text="성수동 맛집 멤" />

                <TextView
                    android:id="@+id/tv_member_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/main"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_food_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="장소 : 32개"
                    android:textColor="@color/main"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/btn_tmp"
            android:gravity="center"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="..." />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ly_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_route_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="루트 : 24개"
            android:textColor="@color/main"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>