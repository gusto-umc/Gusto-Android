<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.activity.MyProfileEditActivity">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/arrow_left_1" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"/>

        <TextView
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_gravity="center|end"
            android:layout_marginRight="21dp"
            android:textColor="#F27781"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_profile_image"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="41dp"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/nicknameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="18dp"
            android:backgroundTint="#A6A6A6"
            android:hint="구스또"
            android:textColor="#717171"
            android:textColorHint="#717171"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/checkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복확인"
            android:layout_marginRight="20dp"
            android:layout_gravity="center|end"
            android:textColor="#F27781"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"/>
        
        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center|end"
            android:src="@drawable/myprofile_check"
            android:visibility="invisible"/>
    </FrameLayout>

    <TextView
        android:id="@+id/nicknameCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="사용 가능한 닉네임입니다."
        android:textColor="#F27781"
        android:textSize="8sp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/pretendard_regular"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="프로필 사진 변경"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/pretendard_regular"/>

    <TextView
        android:id="@+id/ageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="나이"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/pretendard_regular"/>

    <TextView
        android:id="@+id/genderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="성별"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/pretendard_regular"/>

</LinearLayout>