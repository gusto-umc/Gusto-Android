<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_end"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/tmp_login_complete"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/iv_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:text="회원가입 완료!"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="93.5dp"
        android:background="@drawable/gradient_background_orange_horizontal"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:text="구스또 시작하러 가기"
        android:textColor="@color/white"
        android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>