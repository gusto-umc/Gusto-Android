<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_category"
    android:layout_marginBottom="12.25dp"
    >

    <ImageView
        android:id="@+id/iv_item_category_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4.75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/category_icon_1"
        />

    <TextView
        android:id="@+id/tv_item_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카페"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10.49dp"
        app:layout_constraintStart_toEndOf="@id/iv_item_category_icon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_item_category_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nn개"
        android:fontFamily="@font/pretendard_extrabold"
        android:textSize="10sp"
        android:textColor="@color/main_C"
        android:layout_marginTop="4.75dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_category_title"
        app:layout_constraintStart_toEndOf="@id/iv_item_category_icon"
        />

    <ImageView
        android:id="@+id/btn_item_category_popup"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="17dp"
        android:padding="15dp"
        android:src="@drawable/point_3_img"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/background_radius_500"
        android:backgroundTint="#b5b5b5"
        app:layout_constraintTop_toBottomOf="@id/tv_item_category_count"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>