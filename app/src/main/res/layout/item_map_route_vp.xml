<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="26dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구스또 레스토랑"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/pretendard_extrabold"/>
                <ImageView
                    android:id="@+id/btn_detail"
                    android:layout_marginLeft="20dp"
                    android:layout_width="29dp"
                    android:paddingHorizontal="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btn_bookmark"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right_bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_rest_loc"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="메롱시 메로나동바밤바 24-6 1층"
                android:textSize="12sp"
                android:textColor="@color/main_C"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/clock_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/sub_m"
                    android:textSize="11sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="영업시간" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@color/sub_m"/>

                <TextView
                    android:id="@+id/tv_rest_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/gray_1"
                    android:text="매주 월요일 휴무, 08:00~15:00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/phone_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/sub_m"
                    android:textSize="11sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="전화번호" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@color/sub_m"/>

                <TextView
                    android:id="@+id/tv_rest_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/gray_1"
                    android:text="02-555-4452" />
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="31dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/main" />

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/white" />

            <TextView
                android:id="@+id/tv_route_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_black"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>