<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListView.view.StoreFragment"
        android:background="@color/white">

        <!--toolbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_store"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:contentInsetStart="0dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_store_back"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:padding="12dp"
                        android:src="@drawable/arrow_left_1"
                        app:tint="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_saved_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저장된 맛집"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_bold"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_store_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="편집"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="32dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/main_C"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.Toolbar>

        <!--nested scrollview-->
        <androidx.core.widget.NestedScrollView
            app:layout_constraintTop_toBottomOf="@id/toolbar_store"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="500dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_store_category"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_store_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카페"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/tv_store_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14개"
                        android:textSize="10sp"
                        android:fontFamily="@font/pretendard_extrabold"
                        android:textColor="@color/main_C"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#b5b5b5"
                    android:layout_marginHorizontal="16dp"
                    />

                <LinearLayout
                    android:id="@+id/layout_store_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    >
                    <TextView
                        android:id="@+id/tv_listview_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최신순"
                        android:textSize="8sp"
                        android:textColor="@color/gray_3"
                        android:layout_marginEnd="3dp"
                        />
                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="10dp"
                        android:src="@drawable/arrow_down_1_img"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

