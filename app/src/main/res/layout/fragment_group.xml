<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_m"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:padding="12dp"
                android:src="@drawable/arrow_left_1"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="그룹별 리스트"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="59dp"
            android:layout_marginRight="33dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:text="잊으신 건 아니겠죠?" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:gravity="center_vertical"
                    android:text="성수동 맛집 멤" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:textSize="8sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:text="발랄한 에그인헬 님 외 3명" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="60dp"
                android:layout_height="32dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:civ_border_overlay="true"
                    app:civ_border_width="16dp"
                    app:civ_border_color="#CCFFFFFF"
                    android:id="@+id/iv_profile_image3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_launcher_background" />
                <de.hdodenhof.circleimageview.CircleImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/iv_profile_image2"
                    app:civ_border_overlay="true"
                    app:civ_border_width="16dp"
                    app:civ_border_color="#66FFFFFF"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_launcher_background" />
                <de.hdodenhof.circleimageview.CircleImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/iv_profile_image1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:tint="@color/black"
                    android:src="@drawable/ic_launcher_background" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:paddingRight="33dp">

            <TextView
                android:layout_marginLeft="59dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gradient_background_orange"
                android:backgroundTint="@color/white"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#5B2424"
                android:fontFamily="@font/pretendard_semibold"
                android:text="우리 21일날 구스또레스토랑 가는거임 불참 불가!!" />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="59dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="58dp"
                android:layout_height="18dp"
                android:background="@drawable/gradient_background_orange"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/loud_speaker_img"
                    app:tint="@color/sub_m" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_m"
                    android:textSize="8sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="공지사항" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="171dp"
        android:paddingTop="21dp"
        android:background="@drawable/background_radius_top_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>