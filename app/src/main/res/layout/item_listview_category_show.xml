<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_item_category_show_updown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_item_category_show"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/list_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_item_category_show_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리명"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintStart_toEndOf="@id/iv_item_category_show"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="14.49dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/tv_category_show_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nn개"
                    android:fontFamily="@font/pretendard_extrabold"
                    android:textSize="10sp"
                    android:textColor="@color/main_C"
                    app:layout_constraintStart_toStartOf="@id/tv_item_category_show_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_item_category_show_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8.25dp"
                    android:layout_marginTop="4.65dp"
                    />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingLeft="10dp"
                    android:layout_marginVertical="5dp">
                    <ImageView
                        android:id="@+id/btn_item_category_show_down"
                        android:layout_width="12dp"
                        android:layout_height="6dp"
                        android:src="@drawable/arrow_down_2_img"
                        android:layout_marginEnd="22.51dp"
                        android:layout_gravity="center_vertical"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/btn_item_category_show_up"
                        android:layout_width="12dp"
                        android:layout_height="6dp"
                        android:src="@drawable/arrow_up_1_img"
                        android:layout_marginEnd="22.51dp"
                        android:layout_gravity="center_vertical"
                        />
                </FrameLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_item_category_show_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:background="@color/gray_2"
                android:minHeight="30dp"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>