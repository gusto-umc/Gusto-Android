<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_radius_10_stroke_1"
        android:backgroundTint="@color/main_C"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="17dp"
            android:text="맛슐랭"/>
        <ImageView
            android:id="@+id/iv_grade1"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/rice_img"
            app:tint="@color/main_C" />

        <ImageView
            android:id="@+id/iv_grade2"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/rice_img"
            app:tint="@color/main_C" />

        <ImageView
            android:id="@+id/iv_grade3"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/rice_img"
            app:tint="@color/main_C" />

        <ImageView
            android:id="@+id/iv_grade4"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/rice_img"
            app:tint="#B7B7B7" />

        <ImageView
            android:id="@+id/iv_grade5"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/rice_img"
            app:tint="#B7B7B7"
            android:layout_marginRight="18dp"/>
    </LinearLayout>

</LinearLayout>