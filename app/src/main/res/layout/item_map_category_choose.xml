<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp">
    
    <ImageView
        android:id="@+id/iv_item_category_choose_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4.75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <TextView
        android:id="@+id/tv_item_category_choose_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리명"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10.49dp"
        app:layout_constraintStart_toEndOf="@id/iv_item_category_choose_icon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_item_category_choose_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nn개"
        android:fontFamily="@font/pretendard_extrabold"
        android:textSize="10sp"
        android:textColor="@color/main_C"
        android:layout_marginTop="4.75dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_category_choose_title"
        app:layout_constraintStart_toEndOf="@id/iv_item_category_choose_icon"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_3"
        app:layout_constraintTop_toBottomOf="@id/tv_item_category_choose_count"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>