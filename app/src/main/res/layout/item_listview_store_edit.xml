<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="1">
    <CheckBox
        android:id="@+id/cb_item_listview_store_edit"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_store_edit"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_margin="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_item_store_edit_img"
                android:layout_width="34dp"
                android:layout_height="32dp"
                android:src="@drawable/sample_store_image"
                android:clipToOutline="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="11.73dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_radius_5"
                />

            <TextView
                android:id="@+id/tv_item_store_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구스또 레스토랑"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_store_edit_img"
                android:layout_marginTop="9.06dp"
                android:layout_marginStart="12.8dp"
                />

            <TextView
                android:id="@+id/tv_item_store_edit_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메롱시 메로나동 바밤바 24-6 1층"
                android:textSize="8sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/main_C"
                app:layout_constraintTop_toBottomOf="@id/tv_item_store_edit_title"
                app:layout_constraintStart_toStartOf="@id/tv_item_store_edit_title"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/tv_item_store_edit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n번 방문했어요"
                android:textSize="8sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/sub_m"
                app:layout_constraintTop_toTopOf="@id/tv_item_store_edit_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_item_store_edit_title"
                app:layout_constraintStart_toEndOf="@id/tv_item_store_edit_title"
                android:layout_marginStart="5dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>