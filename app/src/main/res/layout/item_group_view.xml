<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/item_list_group"
        android:layout_marginHorizontal="31dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/background_radius_5">

        <androidx.cardview.widget.CardView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="3dp"
            android:layout_marginHorizontal="16dp" >

            <ImageView
                android:id="@+id/iv_rest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:text="구스또 레스토랑" />

                <TextView
                    android:id="@+id/tv_rest_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:textSize="8sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/main"
                    android:text="메롱시 메로나동 바밤바 24-6 1층" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="추천한 사람:"
                    android:textColor="#CBCBCB"
                    android:textSize="8sp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    app:cardCornerRadius="11dp">
                    <ImageView
                        android:id="@+id/iv_recomend_profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/btn_detail"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            android:src="@drawable/arrow_right"
            app:tint="#000000" />

    </LinearLayout>


</LinearLayout>