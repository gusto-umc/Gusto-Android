<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_store_edit"
    android:background="@color/white"
    android:layout_marginTop="20dp">

    <CheckBox
        android:id="@+id/cb_store_edit"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/checkbox_custom"
        android:button="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26.15dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_item_store_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cb_store_edit"
        android:layout_marginStart="21.85dp"
        android:text="구스또 레스토랑"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_item_store_edit_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_item_store_edit_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_store_edit_title"
        app:layout_constraintStart_toEndOf="@id/tv_item_store_edit_title"
        android:layout_marginStart="3dp"
        android:text="음식점"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/gray_3"
        />
    <TextView
        android:id="@+id/tv_item_store_edit_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_item_store_edit_title"
        app:layout_constraintStart_toStartOf="@id/tv_item_store_edit_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="메롱시 메로나동 바밤바 24-6 1"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/gray_1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/layout_item_store_edit_photo"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_item_store_edit_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="12dp"
        android:weightSum="38">
        <ImageView
            android:id="@+id/iv_item_store_edit_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_item_store_edit_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_item_store_edit_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_item_store_edit_photo"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sub_m"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="55dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>