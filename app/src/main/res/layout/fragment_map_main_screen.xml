<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:inputType="text"
                android:background="@drawable/edit_text_border"
                android:hint="맛집 검색"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Button -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/total_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="1dp"
                        app:chipCornerRadius="41dp"
                        app:chipBackgroundColor="@color/main_C"
                        app:chipStrokeColor="@color/main_C"
                        android:textAppearance="@font/pretendard_medium"
                        android:textColor="@color/white"
                        android:text="전체"
                        android:layout_marginRight="12dp"
                        android:textSize="13sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:chipSpacingHorizontal="8dp"
                            app:singleSelection="false">
                            <com.google.android.material.chip.Chip
                                android:id="@+id/cafe_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_C"
                                app:chipStrokeColor="@color/main_C"
                                android:layout_marginRight="12dp"
                                app:chipStrokeWidth="1dp"
                                app:chipCornerRadius="41dp"
                                app:chipIcon="@drawable/streamline_bean"
                                app:chipBackgroundColor="@color/chip_select_color"
                                android:textAppearance="@font/pretendard_medium"
                                android:text="카페"
                                android:textSize="13sp"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/Italian_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_C"
                                app:chipStrokeColor="@color/main_C"
                                android:layout_marginRight="12dp"
                                app:chipStrokeWidth="1dp"
                                app:chipCornerRadius="41dp"
                                app:chipIcon="@drawable/streamline_bean"
                                app:chipBackgroundColor="@color/chip_select_color"
                                android:textAppearance="@font/pretendard_medium"
                                android:text="양식"
                                android:textSize="13sp"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/Japanese_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:chipStrokeColor="@color/main_C"
                                android:textColor="@color/main_C"
                                android:layout_marginRight="12dp"
                                app:chipStrokeWidth="1dp"
                                app:chipCornerRadius="41dp"
                                app:chipIcon="@drawable/streamline_bean"
                                app:chipBackgroundColor="@color/chip_select_color"
                                android:textAppearance="@font/pretendard_medium"
                                android:text="일식"
                                android:textSize="13sp"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/Izakaya_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_C"
                                app:chipStrokeColor="@color/main_C"
                                android:layout_marginRight="12dp"
                                app:chipStrokeWidth="1dp"
                                app:chipCornerRadius="41dp"
                                app:chipIcon="@drawable/streamline_bean"
                                app:chipBackgroundColor="@color/chip_select_color"
                                android:textAppearance="@font/pretendard_medium"
                                android:textSize="13sp"/>
                        </com.google.android.material.chip.ChipGroup>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>