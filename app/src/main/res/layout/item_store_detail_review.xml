<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/sub_m"
        android:text="2024. 01 방문"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.33dp">

        <ImageView
            android:id="@+id/iv_store_detail_profile_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/tv_store_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="귀여운 바질페스토 12"
            android:textSize="11sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="#a6a6a6"
            app:layout_constraintTop_toTopOf="@id/iv_store_detail_profile_img"
            app:layout_constraintBottom_toBottomOf="@id/iv_store_detail_profile_img"
            app:layout_constraintStart_toEndOf="@id/iv_store_detail_profile_img"
            android:layout_marginStart="7dp"/>

        <TextView
            android:id="@+id/tv_store_detail_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@id1234"
            android:textSize="11sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_3"
            app:layout_constraintTop_toTopOf="@id/iv_store_detail_profile_img"
            app:layout_constraintBottom_toBottomOf="@id/iv_store_detail_profile_img"
            app:layout_constraintStart_toEndOf="@id/tv_store_detail_username"
            android:layout_marginStart="4dp"
            />

        <ImageView
            android:id="@+id/iv_store_detail_heart_on"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_store_detail_heart_count"
            android:layout_marginBottom="6dp"
            />
        <ImageView
            android:id="@+id/iv_store_detail_heart_off"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_store_detail_heart_count"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/tv_store_detail_heart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="10sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="#929292"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>



</LinearLayout>