<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_review_add"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/arrow_left_1"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="리뷰 작성"
            android:textColor="@color/black" 
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/pBar"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="36dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:max="600"
            android:progressDrawable="@drawable/progressbar"
            android:progress="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="72dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_black"
            android:textSize="20sp"
            android:text="방문한 날은 언제인가요?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="23dp"
            android:layout_weight="1">


            <EditText
                android:id="@+id/et_year"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/gray_1"
                android:fontFamily="@font/pretendard_bold"
                android:hint="2024"
                android:maxLength="4"
                android:inputType="number"

                android:background="@drawable/background_radius_10_stroke_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="11dp"
                android:text="년" />

            <EditText
                android:id="@+id/et_month"
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/gray_1"
                android:fontFamily="@font/pretendard_bold"
                android:hint="1"
                android:maxLength="2"
                android:inputType="number"
                android:background="@drawable/background_radius_10_stroke_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="11dp"
                android:text="월" />

            <EditText
                android:id="@+id/et_day"
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/gray_1"
                android:fontFamily="@font/pretendard_bold"
                android:hint="22"
                android:maxLength="2"
                android:inputType="number"
                android:background="@drawable/background_radius_10_stroke_1"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="11dp"
                android:text="일" />
        </LinearLayout>


        <TextView
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/main_C"
            android:background="@drawable/background_radius_10"

            android:layout_marginBottom="96dp"
            android:text="다음으로 넘어가기" />

    </LinearLayout>


</LinearLayout>