<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_review_add"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/arrow_left_1"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="리뷰 작성"
            android:textColor="@color/black" 
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/pBar"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="36dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:max="600"
            android:progressDrawable="@drawable/progressbar"
            android:progress="200" />

        <TextView
            android:id="@+id/tv_upload1"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_black"
            android:textSize="20sp"
            android:text=" 찍은 사진들을    업로드 해주세요!" />

        <LinearLayout
            android:layout_marginHorizontal="23dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_radius_20"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ly_imgaes"
                android:layout_width="314dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_imgae1"
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        app:cardCornerRadius="15dp" >

                        <ImageView
                            android:id="@+id/iv_imgae1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/marker_color_img" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_imgae3"
                        android:layout_marginTop="5dp"
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        app:cardCornerRadius="15dp" >

                        <ImageView
                            android:id="@+id/iv_imgae3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_imgae2"
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="15dp" >

                        <ImageView
                            android:id="@+id/iv_imgae2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_launcher_background" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_imgae4"
                        android:layout_marginTop="5dp"
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="15dp" >

                        <ImageView
                            android:id="@+id/iv_imgae4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_launcher_background" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_height="0dp"
                android:layout_width="300dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="center"
                android:padding="80dp"
                android:src="@drawable/marker_color_img" />

            <TextView
                android:id="@+id/tv_upload2"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:text="구스또 레스토랑에서 찍은 사진들을 업로드 해주세요!" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_back2"
                android:layout_width="88dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/main_C"
                android:background="@drawable/background_radius_10"
                android:padding="11dp"
                android:src="@drawable/arrow_coner_up_left_img"
                android:layout_marginBottom="96dp" />
            <TextView
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="15sp"
                android:gravity="center"
                android:backgroundTint="@color/main_C"
                android:background="@drawable/background_radius_10"
                android:layout_marginBottom="96dp"
                android:text="사진 건너뛰기" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>