<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_radius_20">

    <TextView
        android:id="@+id/tv_dialog_one_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지로 설정할 내용을 입력해주세요"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="18dp"
        />

    <EditText
        android:id="@+id/tv_dialog_one_desc"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:hint="예시 텍스트"
        android:textSize="10sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColorHint="@color/gray_1"
        android:textColor="@color/black"
        android:background="@drawable/background_radius_10_stroke_1"
        android:paddingLeft="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="40dp"
        />

    <TextView
        android:id="@+id/btn_dialog_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="확인"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="13dp"
        android:background="@drawable/background_radius_10"
        android:backgroundTint="@color/main"
        />

</LinearLayout>