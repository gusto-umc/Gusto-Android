<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/loc_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="50px"
                android:text="구스또 레스토랑"/>
            <ImageView
                android:id="@+id/res_inf"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_margin="20px"
                android:src="@drawable/arrow_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/res_vector"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_margin="10px"
                android:layout_gravity="end|right"
                android:src="@drawable/vector"/>
        </LinearLayout>

        <TextView
            android:id="@+id/loc_res_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/main_C"
            android:padding="10px"
            android:text="주소에 대한 내용"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loc_res_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/sub_m"
                    android:text="영업시간 | "/>
                <TextView
                    android:id="@+id/loc_res_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/gray_1"
                    android:text=" 휴무일 및 영업시간"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loc_res_call_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/sub_m"
                    android:text="전화번호 | "/>
                <TextView
                    android:id="@+id/loc_res_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/gray_1"
                    android:text=" call number"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>