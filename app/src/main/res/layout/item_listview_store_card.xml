<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_listview_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="구스또 레스토랑"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_listview_card_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="음식점"
                android:textColor="@color/gray_3"
                android:textSize="13sp"
                android:layout_marginLeft="3dp" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_item_listview_card_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="메롱시 메로나동 바밤바 24-6 1층"
            android:textColor="@color/gray_1"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_listview_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/iv_item_listview_card_img"
                android:layout_width="96dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_store_img"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true" />
            <!--

            <ImageView
                android:id="@+id/iv_item_listview_card_img_2"
                android:layout_width="96dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_store_img"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true" />

            <ImageView
                android:id="@+id/iv_item_listview_card_img_3"
                android:layout_width="96dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_store_img"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true" />

                -->

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="#FFD704" />


    </LinearLayout>

</LinearLayout>
