<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_listview_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView

                android:id="@+id/iv_item_listview_card_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/sample_store_img"
                android:clipToOutline="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="11.73dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_radius_5"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_item_listview_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구스또 레스토랑"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_listview_card_img"
                android:layout_marginTop="9.06dp"
                android:layout_marginStart="12.8dp"
                />

            <TextView
                android:id="@+id/tv_item_listview_card_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메롱시 메로나동 바밤바 24-6 1층"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/main_C"
                app:layout_constraintTop_toBottomOf="@id/tv_item_listview_card_title"
                app:layout_constraintStart_toStartOf="@id/tv_item_listview_card_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/tv_item_listview_card_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n번 방문했어요"
                android:textSize="10sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/sub_m"
                app:layout_constraintTop_toTopOf="@id/tv_item_listview_card_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_item_listview_card_title"
                app:layout_constraintStart_toEndOf="@id/tv_item_listview_card_title"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_item_listview_card_saveo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/save_x_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_item_listview_card_savex"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/save_x_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="5dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>