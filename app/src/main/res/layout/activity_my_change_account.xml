<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my.activity.MyProfileEditActivity">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/arrow_left_1" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연동 계정"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center|start"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_naver"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_soical_naver"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_circle_naver" />

            <TextView
                android:id="@+id/tv_txt_naver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="13sp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_connect_naver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="연결하기"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_C"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/btn_x_naver"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/img_x"/>
            <ImageView
                android:id="@+id/btn_plus_naver"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/img_plus"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_kakao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_soical_kakao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_circle_kakao" />
            <TextView
                android:id="@+id/tv_txt_kakao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="13sp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_connect_kakao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="연결하기"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_C"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/btn_x_kakao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/img_x"/>
            <ImageView
                android:id="@+id/btn_plus_kakao"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/img_plus"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_google"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_soical_google"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_circle_google" />

            <TextView
                android:id="@+id/tv_txt_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_3"
                android:textSize="13sp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_connect_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="연결하기"
                android:textSize="13sp"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_C"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/btn_x_google"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/img_x"/>
            <ImageView
                android:id="@+id/btn_plus_google"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/img_plus"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_connect_other"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="22dp"
        android:padding="10dp"
        android:layout_gravity="right"
        android:textColor="@color/main_C"
        android:fontFamily="@font/pretendard_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다른 계정으로 로그인" />


</LinearLayout>