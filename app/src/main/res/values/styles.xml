<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--My 탭 텍스트 설정-->
    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="reviewFabstyle" parent="">
        <item name="android:background">@drawable/review_fab_round</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--Bottomnavigation 글자 설정-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/pretendard_black</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <!--ratingbar custom-->
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbarTextSize</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="popupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="popupMenuBackground">@drawable/background_radius_20</item>
    </style>


    <style name="MyProfileEditPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/my_profile_menu_select_color</item>
    </style>

</resources>